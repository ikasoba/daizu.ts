{
  "compilerOptions": {
    "target": "es2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*"]
}
